<!DOCTYPE html>
<html>
<head>
  <title>FisioCatania</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- DataTables Bootstrap5 CSS -->
  <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">

  <style>
    @media (min-width: 768px) {
      #menu {
        width: 200px;
        height: 100vh;
        position: fixed;
        left: 0;
        top: 0;
        background: #f8f9fa;
        padding: 1rem;
      }
      #content {
        margin-left: 200px;
        padding: 2rem;
      }
    }

    @media (max-width: 767.98px) {
      #menu {
        width: 100%;
        background: #f8f9fa;
        padding: 0.5rem;
      }
      #content {
        padding: 1rem;
      }
    }

    body {
      margin: 0;
    }

    .nav-link.active {
      font-weight: bold;
      color: #0d6efd !important;
    }
  </style>
</head>
<body>
  <div id="menu" class="border-bottom d-md-block d-flex flex-column flex-md-column">
    <h5 class="ms-2 mt-2">Men√π</h5>
    <ul class="nav flex-column flex-md-column flex-sm-row">
      <li class="nav-item">
        <a href="/dashboard" class="nav-link <%= page === 'dashboard_content' ? 'active' : '' %>">
          Dashboard
        </a>
      </li>
      <li class="nav-item">
        <a href="/anagrafica" class="nav-link <%= page === 'anagrafica_content' ? 'active' : '' %>">
          Anagrafica
        </a>
      </li>
      <li class="nav-item">
        <a href="/terapie" class="nav-link <%= page === 'terapie_content' ? 'active' : '' %>">
          Terapie
        </a>
      </li>
      <li class="nav-item">
        <a href="/logout" class="nav-link text-danger">Logout</a>
      </li>
    </ul>
  </div>

  <div id="content">
    <%- include(page) %>
  </div>

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <!-- Bootstrap Bundle (Popper + JS) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- DataTables JS -->
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
</body>
</html>
