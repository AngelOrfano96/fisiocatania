<h3>Distretti Anatomici</h3>

<% if (message) { %>
  <div class="alert alert-danger"><%= message %></div>
<% } %>

<div class="card mb-4">
  <div class="card-body">
    <form method="POST" action="/distretti" class="row g-2 align-items-end">
      <div class="col-md-8">
        <label for="nomeDistretto" class="form-label">Nome del distretto</label>
        <input type="text" name="nome" id="nomeDistretto"
               class="form-control" placeholder="Es. anca dx" required>
      </div>
      <div class="col-md-4 text-end">
        <button type="submit" class="btn btn-success w-100">Crea</button>
      </div>
    </form>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <table id="distretti-table" class="table table-bordered table-striped align-middle">
      <thead>
        <tr>
          <th>Nome</th>
          <th style="width:180px">Azioni</th>
        </tr>
      </thead>
      <tbody>
        <% distretti.forEach(d => { %>
          <tr data-id="<%= d.id %>">
            <td class="nome-cell">
              <span class="static"><%= d.nome %></span>
              <input type="text"
                     class="form-control form-control-sm editable d-none"
                     value="<%= d.nome %>">
            </td>
            <td>
              <button type="button"
                      class="btn btn-warning btn-sm btn-edit">‚úèÔ∏è</button>
              <button type="button"
                      class="btn btn-success btn-sm btn-save d-none">üíæ</button>
              <button type="button"
                      class="btn btn-secondary btn-sm btn-cancel d-none">‚Ü©Ô∏è</button>

              <form method="POST"
                    action="/distretti/<%= d.id %>/delete"
                    class="d-inline"
                    onsubmit="return confirm(
                      '‚ö†Ô∏è Attenzione: se elimini questo distretto verranno eliminate ' +
                      'anche TUTTE le terapie collegate. Sei sicuro di voler continuare?'
                    )">
                <button class="btn btn-danger btn-sm">üóëÔ∏è</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<script>
  $(function () {
    // Inizializza DataTable: 10 per pagina + barra ricerca
    const dt = $('#distretti-table').DataTable({
      pageLength: 10,
      lengthChange: false,
      dom: 'frtip', // f=filter (search), r=processing, t=table, i=info, p=pagination
      language: {
        search:    'Cerca:',
        paginate:  { previous: '¬´', next: '¬ª' },
        info:      'Pagina _PAGE_ di _PAGES_',
        infoEmpty: 'Nessun record',
        zeroRecords:'Nessun risultato',
        infoFiltered:'(filtrati da _MAX_ totali)'
      }
    });

    // Delegated: MODIFICA
    $('#distretti-table').on('click', '.btn-edit', function () {
      const $row = $(this).closest('tr');
      $row.find('.static').addClass('d-none');
      $row.find('.editable').removeClass('d-none');
      $row.find('.btn-edit').addClass('d-none');
      $row.find('.btn-save, .btn-cancel').removeClass('d-none');
    });

    // Delegated: ANNULLA (semplice refresh per ripristinare lo stato)
    $('#distretti-table').on('click', '.btn-cancel', function () {
      location.reload();
    });

    // Delegated: SALVA
    $('#distretti-table').on('click', '.btn-save', async function () {
      const $row = $(this).closest('tr');
      const id   = $row.data('id');
      const nome = $row.find('input').val().trim();
      if (!nome) return alert('Inserisci un nome valido');

      try {
        const res = await fetch(`/distretti/${id}/update`, {
          method: 'POST',
          headers: { 'Content-Type':'application/json' },
          body: JSON.stringify({ nome })
        });
        if (!res.ok) throw new Error();

        // Ricarico per vedere il valore aggiornato in tutti i contesti (search/paging)
        location.reload();
      } catch {
        alert('Errore nel salvataggio');
      }
    });
  });
</script>
