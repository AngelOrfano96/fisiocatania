<div class="container py-4">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title">Allegati per terapia</h3>
      <p class="text-muted">
        <strong>Terapia del:</strong>
        <%= therapy.data_trattamento.slice(0,10) %> —
        <%= therapy.anagrafica.nome %> <%= therapy.anagrafica.cognome %>
      </p>
      <hr>

      <h5>Carica nuovo allegato</h5>
      <form method="POST" action="/terapie/<%= therapy.id %>/allegati" enctype="multipart/form-data" class="mb-4">
        <div class="input-group" style="max-width:400px;">
          <input type="file" name="allegato" class="form-control" required>
          <button class="btn btn-primary" type="submit">Carica</button>
        </div>
      </form>

      <h5>Allegati esistenti</h5>
      <% if (attachments.length === 0) { %>
        <p class="text-muted">Nessun allegato caricato.</p>
      <% } else { %>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <% attachments.forEach(a => { %>
            <div class="col">
              <div class="card h-100">
                <img src="<%= a.url %>" class="card-img-top object-fit-cover" style="height:200px;" alt="Allegato">
                <div class="card-body d-flex flex-column">
                  <p class="card-text text-truncate mb-2"><%= a.url.split('/').pop() %></p>
                  <div class="mt-auto d-flex justify-content-between">
                    <a href="<%= a.url %>" target="_blank" class="btn btn-sm btn-outline-success">
                      Apri
                    </a>
                    <form method="POST" action="/terapie/<%= therapy.id %>/allegati/<%= a.id %>/delete" onsubmit="return confirm('Sei sicuro di eliminare questo allegato?')" class="m-0">
                      <button type="submit" class="btn btn-sm btn-outline-danger">
                        Elimina
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>

      <div class="mt-4">
        <a href="/fascicoli" class="btn btn-secondary">
          ← Torna a Fascicoli
        </a>
      </div>
    </div>
  </div>
</div>
