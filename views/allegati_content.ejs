<h3 class="mb-4">Allegati per Terapia</h3>

<p>
  <strong>Data terapia:</strong>
  <%= therapy.data_trattamento.slice(0,10) %> —
  <%= therapy.anagrafica.nome %> <%= therapy.anagrafica.cognome %>
</p>

<hr>

<h5>Carica nuovo allegato</h5>
<form method="POST"
      action="/terapie/<%= therapy.id %>/allegati"
      enctype="multipart/form-data"
      class="mb-5">
  <div class="input-group" style="max-width:400px;">
    <input type="file"
           name="allegato"
           class="form-control"
           required>
    <button class="btn btn-primary" type="submit">
      Carica
    </button>
  </div>
</form>

<h5>Allegati esistenti</h5>
<% if (attachments.length === 0) { %>
  <p class="text-muted">Nessun allegato caricato.</p>
<% } else { %>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <% attachments.forEach(a => { %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <img src="<%= a.url %>"
               class="card-img-top"
               style="object-fit:cover; height:200px;"
               alt="Allegato <%= a.id %>"
               onerror="this.src='<%= defaultPhoto %>'">
          <div class="card-body d-flex flex-column">
            <p class="card-text text-truncate mb-3">
              <%= a.url.split('/').pop() %>
            </p>
            <div class="mt-auto d-flex justify-content-between">
              <a href="<%= a.url %>"
                 target="_blank"
                 class="btn btn-sm btn-outline-success">
                Apri
              </a>
              <form method="POST"
                    action="/terapie/<%= therapy.id %>/allegati/<%= a.id %>/delete"
                    class="m-0"
                    onsubmit="return confirm('Eliminare questo allegato?')">
                <button type="submit"
                        class="btn btn-sm btn-outline-danger">
                  Elimina
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>

<div class="mt-5">
  <a href="/fascicoli"
     class="btn btn-secondary">
    ← Torna a Fascicoli
  </a>
</div>
